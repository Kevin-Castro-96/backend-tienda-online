{
  "compilerOptions": {
    "target": "ES2020",                                
    "module": "CommonJS",                              
    "rootDir": "src",                                
    "outDir": "dist",                                
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "noImplicitAny": true,                             
    "strictPropertyInitialization": false,             
    "skipLibCheck": true                               
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}

